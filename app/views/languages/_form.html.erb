<%= form_with(model: Language.new, 
              url: languages_path(), 
              method: :post,
             class: 'flex flex-col gap-4 pb-4') do |form| %>
  <%= form.text_field :name,
                  class:
                    "bg-transparent border-[1px] border-solid border-gray-150 rounded-md text-sm" %>
  <%= form.submit value: "New language",
              class:
                "cursor-pointer text-xs md:text-sm lg:text-sm rounded-md bg-gray-300 px-4 py-2 w-full border-[1px]border-solid border-gray-150" %>
<% end %>
